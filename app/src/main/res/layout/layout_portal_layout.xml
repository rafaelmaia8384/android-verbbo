<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorCategoriaUnselected"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.cardview.widget.CardView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="130dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/portalImagem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorTextDark"/>

                        <View
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/gradient"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/portalUrl"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6sp"
                        android:textColor="@color/colorWindowBackground"
                        android:text="portal.verbbo.com.br"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/portalNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="Titulo"/>

                    <TextView
                        android:id="@+id/portalResumo"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:text="Resumo"/>

                    <TextView
                        android:id="@+id/portalCreatedAt"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="@color/colorGrey"
                        android:text="Criado em: 00/00/0000 Ã s 00:00:00"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>